<h1>New Review for <%= @restaurant.name %></h1>

<div class="container col-4 border p-3 mt-3">
  <%= simple_form_for [@restaurant, @review], html: { class: 'mt-5' } do |form| %>
    <%= form.input :content %>
    <%= form.input :rating, collection: 0..5 %>
    <%= form.submit 'Create a review', class: 'btn btn-success' %>
  <% end %>

  <%= link_to 'Back', restaurants_path %>
</div>
